{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Liste des entreprises{% endblock %}

{% block body %}
    {% include 'sections/heading.html.twig' with {'title': 'Liste des entreprises'} %}

    <section class="content">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="content-block p-4" id="main-content">
                        {{ form_start(form) }}
                            <div class="d-flex">
                                {{ form_widget(form.companyName) }}
                                {{ form_widget(form.submit) }}
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% include 'partials/spacer.html.twig' %}
    <section class="list">
        <div class="container">
            <div class="row">
                {% for company in companies %}
                    <div class="col-12 col-md-6">
                        <a href="{{ url('company_show', {'company': company.id}) }}" class="company" id="company-{{ company.id }}">
                            <div class="section-header">
                                <div class="selected-date">
                                    <span>Dernière mise à jour : {{ company.updatedAt|date('d/m/Y') }}</span>
                                </div>
                                <h2>{{ company.name }}</h2>
                            </div>
                            <div class="separator-container">
                                <div class="separator"></div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-sm-4">
                                    <span class="info"><i class="fa-solid fa-scale-balanced"></i> {{ company.legalStatus }}</span>
                                </div>
                                <div class="col-12 col-sm-4">
                                    <span class="info"><i class="fa-solid fa-building-circle-check"></i> {{ company.registrationCity }}</span>
                                </div>
                                <div class="col-12 col-sm-4">
                                    <span class="info"><i class="fa-solid fa-calendar-check"></i> {{ company.registrationDate|date('d/m/Y') }}</span>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}